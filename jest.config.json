{
  "moduleFileExtensions": [
    "ts",
    "js",
    "json"
  ],
  "testMatch": [
    "<rootDir>/test/**/*.(spec|test).ts|tsx"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testEnvironment": "node",
  "reporters": [ "default" ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/coverage/"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 75,
      "branches": 30,
      "functions": 80,
      "lines": 75
    }
  },
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  }
}
